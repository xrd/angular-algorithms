%html
  %head
    %link{:href => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "animate.css", :rel => "stylesheet"}/
    %link{:href => "algorithms.css", :rel => "stylesheet"}/
  %body{"ng-app" => "gi"}
    .container{ 'ng-controller' => 'GICtrl' }
      .row
        .col-md-2{ 'ng-controller' => 'TopicsCtrl' }
          %h3 Topics
          %ul
            %li{ 'ng-repeat' => 'topic in topics | filter:enabled' }
              %a{ 'ng-href' => "index.html#algorithms/{{topic.name}}" , 'ng-show' => 'topic.enabled' } {{ topic.name }}
        .col-md-10
          %h3 Algorithm
          .label{ 'ng-show' => 'status' } {{ status }}
          %div{ 'ng-view' => true }

    %script{:src => "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.4/angular.js"}
    %script{:src => "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.4/angular-route.js"}
    %script{:src => "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.4/angular-resource.js"}
    %script{:src => "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.4/angular-animate.js"}
    %script{ src: 'js/app.js' }
    %script{ src: 'js/e.js' }
    %script{ src: 'js/sorting.js' }
    %script{ src: 'js/cgol.js' }
    %script{ src: 'js/o.js' }
    %script{ src: 'js/dict.js' }
    %script{ src: 'js/fec.js' }
    %script{ src: 'js/shortest_path.js' }
    %script{ src: 'js/jquery.js' }
    %script{ src: 'js/jquery.flot.js' }
